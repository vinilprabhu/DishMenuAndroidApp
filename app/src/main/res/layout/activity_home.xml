<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dishmenu.nerdcutlet.com.dishmenuandroidapp.Home">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Profile"
        android:textSize="30dp"
        android:textColor="#14FFEC"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="email"
        android:textColor="#14FFEC"
        android:id="@+id/textViewEmail"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name :"
        android:layout_below="@+id/textViewEmail"
        android:textColor="#14FFEC"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textViewFirstName"
        android:layout_marginLeft="10dp"
        android:textColor="#14FFEC"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Surname :"
        android:textColor="#14FFEC"
        android:layout_below="@+id/textViewFirstName"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewSurname"
        android:text=""
        android:textColor="#14FFEC"
        android:layout_below="@+id/textViewFirstName"
        android:layout_alignStart="@+id/textViewFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Country :"
        android:textColor="#14FFEC"
        android:layout_below="@+id/textViewSurname"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCountry"
        android:textColor="#14FFEC"
        android:text=""
        android:layout_alignStart="@+id/textViewFirstName"
        android:layout_below="@+id/textViewSurname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DOB :"
        android:textColor="#14FFEC"
        android:layout_below="@+id/textViewCountry"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDOB"
        android:textColor="#14FFEC"
        android:text=""
        android:layout_below="@+id/textViewCountry"
        android:layout_alignStart="@+id/textViewFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone :"
        android:layout_below="@+id/textViewDOB"
        android:textColor="#14FFEC"
        android:id="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewPhone"
        android:textColor="#14FFEC"
        android:text=""
        android:layout_below="@+id/textViewDOB"
        android:layout_alignStart="@+id/textViewFirstName" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:id="@+id/buttonLogout"
        android:textColor="#14FFEC"
        android:background="#88000000"
        android:layout_alignTop="@+id/buttonup"
        android:layout_alignParentEnd="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="update profile"
        android:textColor="#14FFEC"
        android:background="#88000000"
        android:id="@+id/buttonup"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textColor="#23dcf1"
        android:background="#88000000"
        android:id="@+id/buttonrest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
